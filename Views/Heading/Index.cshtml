@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ string color = "";
    string statusColor = "";}

<!DOCTYPE html>
<html>
<head>
    <title>Başlıklar</title>
</head>
<body class="hold-transition sidebar-mini">
    <br />
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover projects">
                    <thead class="thead-dark">
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 35%">
                                Başlık Adı
                            </th>
                            <th style="width: 15%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 15%">
                                Kategori
                            </th>
                            <th style="width: 10%" class="text-left">
                                Durum
                            </th>
                            <th class="text-center">
                                İşlemler
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Category.CategoryName == "Tiyatro")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Category.CategoryName == "Yazılım")
                            {
                                color = "badge badge-danger";
                            }
                            if (item.Category.CategoryName == "Grafik Tasarım")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Category.CategoryName == "Film")
                            {
                                color = "badge badge-primary";
                            }
                            if (item.Category.CategoryName == "Spor")
                            {
                                color = "badge badge-secondary";
                            }
                            if (item.HeadingStatus.ToString() == "True")
                            {
                                statusColor = "btn bg-success text-white disabled";
                            }
                            if (item.HeadingStatus.ToString() == "False")
                            {
                                statusColor = "btn bg-danger text-white disabled";
                            }
                            <tr>
                                <td>
                                    @item.HeadingID
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline text-left">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="~/TemplateUI/dist/img/avatarHead/kafa2.png">
                                        </li>
                                    </ul>
                                </td>
                                <td class="project-state text-left">
                                    <span class="@color">@item.Category.CategoryName</span>
                                </td>
                                <td>
                                    <span class="@statusColor">@item.HeadingStatus</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                        <i class="fas fa-folder"></i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingID">
                                        <i class="fas fa-pencil-alt"></i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@item.HeadingID">
                                        <i class="fas fa-trash"></i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<a href="/Heading/AddHeading/" class="btn btn-warning">Yeni Başlık Girişi</a>



